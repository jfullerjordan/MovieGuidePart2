# Week 6 Lab 2: Movie Guide Part 2

def display_menu():
    print("The Movie List program")
    print("COMMAND MENU")
    print("list - List all movies")
    print("add  - Add a movie")
    print("del  - Delete a movie")
    print("exit - Exit program")

def read_movies():
    movies = []
    try:
        with open("movies.txt", "r") as file:
            for line in file:
                movies.append(line.strip())
    except FileNotFoundError:
        movies = ["Cat on a Hot Tin Roof", "On the Waterfront", "Monty Python and the Holy Grail"]
        write_movies(movies)
    return movies

def write_movies(movies):
    with open("movies.txt", "w") as file:
        for movie in movies:
            file.write(movie + "\n")

def list_movies(movies):
    for i, movie in enumerate(movies, 1):
        print(f"{i}. {movie}")

def add_movie(movies):
    name = input("Movie: ")
    movies.append(name)
    write_movies(movies)
    print(f"{name} was added.")

def delete_movie(movies):
    number = int(input("Number: "))
    if 1 <= number <= len(movies):
        movie = movies.pop(number - 1)
        write_movies(movies)
        print(f"{movie} was deleted.")
    else:
        print("Invalid movie number.")

def main():
    display_menu()
    movies = read_movies()
    while True:
        command = input("\nCommand: ").lower()
        if command == "list":
            list_movies(movies)
        elif command == "add":
            add_movie(movies)
        elif command == "del":
            delete_movie(movies)
        elif command == "exit":
            print("Bye!")
            break
        else:
            print("Not a valid command. Please try again.")

if __name__ == "__main__":
    main()
